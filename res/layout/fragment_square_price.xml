                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_item_nums_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="39"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_item_nums_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
