<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="" />

            <TextView
                android:id="@+id/text_month_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="102/8" />

            <TextView
                android:id="@+id/text_month_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="102/9" />

            <TextView
                android:id="@+id/text_month_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="102/10" />

            <TextView
                android:id="@+id/text_month_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="102/11" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="最高價" />

            <TextView
                android:id="@+id/text_high_price_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="30.2萬" />

            <TextView
                android:id="@+id/text_high_price_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="39.2萬" />

            <TextView
                android:id="@+id/text_high_price_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="34.2萬" />

            <TextView
                android:id="@+id/text_high_price_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="30.2萬" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="平均價" />

            <TextView
                android:id="@+id/text_avg_price_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="30.2萬" />

            <TextView
                android:id="@+id/text_avg_price_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="39.2萬" />

            <TextView
                android:id="@+id/text_avg_price_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="34.2萬" />

            <TextView
                android:id="@+id/text_avg_price_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="30.2萬" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="漲跌幅" />

            <TextView
                android:id="@+id/text_price_change_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="-" />

            <TextView
                android:id="@+id/text_price_change_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="漲7.1%" />

            <TextView
                android:id="@+id/text_price_change_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="漲7.1%" />

            <TextView
                android:id="@+id/text_price_change_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="漲7.1%" />
        </TableRow>
        
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="最低價" />

            <TextView
                android:id="@+id/text_low_price_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="30.2萬" />

            <TextView
                android:id="@+id/text_low_price_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="39.2萬" />

            <TextView
                android:id="@+id/text_low_price_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="34.2萬" />

            <TextView
                android:id="@+id/text_low_price_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="30.2萬" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="交易數" />

            <TextView
                android:id="@+id/text_item_nums_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="30" />

            <TextView
                android:id="@+id/text_item_nums_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="39" />

            <TextView
                android:id="@+id/text_item_nums_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="20" />

            <TextView
                android:id="@+id/text_item_nums_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="25" />
        </TableRow>
        
    </TableLayout>

</LinearLayout>