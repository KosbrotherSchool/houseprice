                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="" />

            <TextView
                android:id="@+id/text_month_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="102/11"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_month_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
