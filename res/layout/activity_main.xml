<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        class="com.kosbrother.houseprice.fragment.TransparentSupportMapFragment" />

    <LinearLayout
        android:id="@+id/layout_outside_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/searchTextLayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_search_background"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edittext_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:hint="輸入關鍵文字"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageview_search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignRight="@id/edittext_search"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距離多遠" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5km" />
        </LinearLayout>

        <!-- need tab fragment and view pager -->

        <include android:id="@+id/main1" 
            layout="@layout/fragment_month_breif_pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             />
        
        <LinearLayout 
            android:id="@+id/layout_data_change"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/laytout_data_selector"
            >
	        <TextView
	             
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="房價總攬"
	            />
	        <ImageView 
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:background="@drawable/icon_down"
	            />
        </LinearLayout>
        
        <!-- tabhost for whole data -->
        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
             >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0" />

                <FrameLayout
                    android:id="@+android:id/realtabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </TabHost>
        
        
    </LinearLayout>

</LinearLayout>